{
  "compilerOptions": {
    "outDir": "build",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node10",
    "strict": true,
    "allowJs": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": false
  },
  "include": ["src"]
}
